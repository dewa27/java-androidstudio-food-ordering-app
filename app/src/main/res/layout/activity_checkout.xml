<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckoutActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/txtFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/montserrat"
                android:text="Tipat Cantok"
                android:textColor="@color/darkgrey_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="right"
                android:text="Rp. 80.000"
                android:textColor="@color/darkgrey_text"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtFoodDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In consectetur justo nec lectus lacinia, id varius metus elementum. Sed tristique orci a felis euismod egestas. Vestibulum at urna felis. Sed pharetra sodales molestie" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:background="#F6EBEB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Catatan "
                android:textColor="@color/darkgrey_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6EBEB"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Tambahkan catatan ( Ex : tolong cabainya ditambah yaa )"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:foregroundGravity="top"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgBtnMin"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right|center_horizontal|center_vertical"
                    android:background="@drawable/button_round"
                    app:srcCompat="@drawable/ic_baseline_remove_24" />

                <TextView
                    android:id="@+id/txtFoodQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/montserrat"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/darkgrey_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imgBtnPlus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right|center_horizontal|center_vertical"
                    android:background="@drawable/button_round"
                    app:srcCompat="@drawable/ic_baseline_add_24" />


            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/orange_primary"
            android:fontFamily="@font/montserrat"
            android:foregroundGravity="bottom"
            android:text="Tambahkan ke Keranjang"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

